<div class="container">
  <div class='card'>
      <div class='card-body'>
        <h2><%= t('users.edit_settings') %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="alert alert-info">
            <p><%= t('users.warn') %></p>

            <div class="field mb-4">
              <%= f.label :current_password %><br />
              <%= f.password_field :current_password, required: true, autocomplete: "off", class:'form-control' %>
            </div>
          </div>

          <div class="field mb-4">
            <%= f.label :name %><br />
            <%= f.text_field  :name, required: true, autocomplete: "off", class:'form-control' %>
          </div>

          <div class="field mb-4">
            <%= f.label :username %><br />
            <%= f.text_field  :username, required: true, autocomplete: "off", class:'form-control' %>
          </div>

          <div class="field mb-4">
            <%= f.label :bio %><br />
            <%= f.text_area  :bio, autocomplete: "off", class:'form-control' %>
          </div>

          <div class="field mb-4">
            <%= f.label :email %><br />
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class:'form-control' %>
          </div>


          <div class="row">
            <div class="col-xs-12 col-md-6">
              <div class="field mb-4">
                <%= f.label :avatar %><br />
                <%= f.file_field :avatar, class: '' %>
              </div>

              <div class="field mb-4">
                <%= f.label :header %><br />
                <%= f.file_field :header, class: '' %>
              </div>
            </div>
            <div class="col-xs-12 col-md-6">
              <div class="card">
                <div class="card-body">
                  <h4><%= t('users.change_pass') %></h4>
                  <p><%= t('users.change_pass_p') %></p>
                  <div class="field mb-4">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
                    <% if @minimum_password_length %>
                      <br />
                      <%= t('users.min_pass', len: @minimum_password_length) %>
                    <% end %>
                  </div>

                  <div class="field mb-4">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= f.submit t("shared.update"), class: 'btn btn-primary' %>
          </div>
        <% end %>
        <br/>
        <div class='card'>
          <div class='card-body'>
            <h3><%= t('users.delete') %></h3>
            <p><%= t('users.delete_p') %> <%= button_to t("users.cancel"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>
          </div>
        </div>
    </div>
  </div>
</div>
