<div class='container'>
  <div class='card'>
    <div class='card-body'>
    
      <h2><%= t("nav_bar.sign_up") %></h2>

      <div class="alert alert-info">
        <p><%= t('users.sign_up_p1') %></p>
        <p><%= t('users.sign_up_p2') %></p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field mb-4">
          <%= f.label :name %><br />
          <%= f.text_field  :name, required: true, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="field mb-4">
          <%= f.label :username %><br />
          <%= f.text_field  :username, required: true, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="field mb-4">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class:'form-control' %>
        </div>

        <div class="field mb-4">
          <%= f.label :password %>
          <%= f.password_field :password, required: true, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="field mb-4">
          <%= f.label :avatar %><br />
          <%= f.file_field :avatar, class: '' %>
        </div>

        <div class="actions mb-4">
          <%= f.submit t('nav_bar.sign_up'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
