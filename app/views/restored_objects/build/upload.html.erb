<div class="container">
  <%= form_for(@object, :url => wizard_path, :method => :put, :html => { multipart: true }) do |f| %>
    <% if @object.errors.any? %>
        <div class="alert alert-danger">
            <ul>
            <% @object.errors.full_messages.each do |msg| %>
                <li><%= msg %>
            <% end %>
            </ul>
        </div>
    <% end %>
    
    <h2><%= 'Modelo' %></h2>
    <div class="alert alert-info">
      <h2><%= t('restored_object.upload_title') %></h2>
      <p><%= t('restored_object.upload_p1').html_safe %></p>
      <p><%= t('restored_object.upload_p2').html_safe %></p>
      <img src="/zip_example.png" class="instructions"/>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-3"></div>
      <div class="col-xs-12 col-sm-6">
        <%= label_tag t('restored_object.zip_file') %>
        <%= f.hidden_field :title %>
        <%= file_field_tag :zip_file, required: true, class:'form-control' %>
        <br/>
        <%= link_to "Volver", previous_wizard_path, :class => 'btn' %>
        <%= f.submit 'Continuar', :class => 'btn btn-primary' %>
      </div>
      <div class="col-xs-12 col-sm-3"></div>
    </div>
    
  <% end %>
</div>